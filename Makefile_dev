NAME = Minishell
EXEC = -o $(NAME)
LIBRL = -lreadline
LIBFT = -L./libft -lft
INCLUDE = -I./include
FILES = ${shell find ./src -name "*.c" }
EXTRA_LIBFT_FUNCS = ${shell find ./src/libft_funcs/ -name "ft_*.c"}

.SILENT:

.QUIET:

default:
	@$(MAKE) -C ./libft
	@$(CC) $(FILES) -DDEBUG $(INCLUDE) $(LIBRL) $(LIBFT) $(EXEC)
	@./$(NAME)

exec:
	$(CC) ./src/executor/executor.c $(EXTRA_LIBFT_FUNCS) $(INCLUDE) $(LIBRL) $(LIBFT) -o executor.out
	
tokens:
	$(CC) ${shell find ./src -name "lexer*.c"} $(EXTRA_LIBFT_FUNCS) $(INCLUDE) $(LIBRL) $(LIBFT) -o tokens.out